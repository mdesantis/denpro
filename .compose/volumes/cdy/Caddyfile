{
	auto_https off
	http_port 8080

	log {
		format console
		level debug
	}
}

http://*.localhost, http://*.localhost.localdomain {
	root * /srv
	file_server
	encode zstd gzip

	@static {
		file
	}

	@notStatic {
		not file
	}

	header @static Cache-Control "public, max-age=31536000"

	reverse_proxy @notStatic rls:3000
}
